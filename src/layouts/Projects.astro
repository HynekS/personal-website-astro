---
import Layout from "@layouts/Layout.astro";
import ScrollToTop from "@components/ScrollToTop";

const { title } = Astro.props.frontmatter;
---

<Layout title={title}>
  <main class="flex-auto max-w-full [margin-right:calc((50% - 30ch)/2)]">
    <article
      class="prose prose-md mx-auto pt-8 px-4 md:prose md:prose-thin lg:prose-lg lg:px-0 lg:prose-thin dark:prose-dark pb-16 dark:prose-thin"
    >
      <slot />
    </article>
  </main>
  <ScrollToTop client:load />
</Layout>
