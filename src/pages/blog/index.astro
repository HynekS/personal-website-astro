---
import MySiteLayout from '../../layouts/Layout.astro'

const posts = await Astro.glob("./**/*.{md,mdx}");

posts.sort((a, b) => Date.parse(b.frontmatter.dateCreated) - Date.parse(a.frontmatter.dateCreated));

---

<MySiteLayout title="My Blog Posts">
  <h1 class="text-4xl font-bold">Blog</h1>
  <ul>
    {
      posts.map((post) => {
        return (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        );
      })
    }
  </ul>
</MySiteLayout>
